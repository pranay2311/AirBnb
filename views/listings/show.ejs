<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="text-center">Listing Details</h3>
  </div>

  <div class="card col-8 offset-2 show">
    <img
      src="<%= listing.image %>"
      alt="Listing Image"
      class="card-img-top show-img"
    />
    <div class="card-body">
      <h5 class="card-title text-center"><%= listing.title %></h5>
      <p class="card-text">
        <strong>Description:</strong><br />
        <%= listing.description %> <br /><br />
        <strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <strong>Location:</strong> <%= listing.location %> <br />
        <strong>Country:</strong> <%= listing.country %> <br />
      </p>
    </div>
  </div>

  <div class="btns mt-3 mb-3  text-center">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark me-2 col-1 offset-3"
    >Edit</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class=" ">
      <button type="submit" class="btn btn-danger offset-5">DELETE  </button>
    </form>
  </div>
</div>
